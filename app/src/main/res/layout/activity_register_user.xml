<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".activities.Activity_RegisterUser"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="20dp">

        <ImageButton
            android:id="@+id/img_regUserPhoto"
            android:layout_width="180dp"
            android:layout_height="150dp"
            android:layout_margin="20dp"
            android:paddingLeft="30dp"
            android:src="@drawable/add_photo"
            android:scaleType="centerCrop"
            android:background="#FFFFFF"/>

        <View
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_weight="0" />


        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText_registerName"
            android:hint="Name"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColorHint="@android:color/darker_gray"
            android:textStyle="bold|italic"
            android:background="@drawable/edit_text_border" />

        <View
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_gravity="center"
            android:layout_weight="0" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText_registerEmail"
            android:hint="E-mail"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:textColorHint="@android:color/darker_gray"
            android:textStyle="bold|italic"
            android:background="@drawable/edit_text_border"/>

        <View
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_gravity="center"
            android:layout_weight="0" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText_registerPassword"
            android:hint="Password"
            android:ems="10"
            android:inputType="textPassword"
            android:textColorHint="@android:color/darker_gray"
            android:textStyle="bold|italic"
            android:background="@drawable/edit_text_border"/>

        <View
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_gravity="center"
            android:layout_weight="0" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText_registerConfirmPassword"
            android:hint="Confirm Password"
            android:ems="10"
            android:inputType="textPassword"
            android:textColorHint="@android:color/darker_gray"
            android:textStyle="bold|italic"
            android:background="@drawable/edit_text_border"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:padding="20dp">

        <Button
            android:id="@+id/btn_Register"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:text="Register"
            android:background="@drawable/button_round_border"
            android:textColor="@color/colorTextWhite"
            />

        <ProgressBar
            android:id="@+id/register_user_progress_bar"
            android:layout_width="171dp"
            android:layout_height="56dp"
            style="?android:attr/progressBarStyleLarge"/>

    </RelativeLayout>


</LinearLayout>